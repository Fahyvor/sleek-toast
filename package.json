{
  "name": "sleek-toast",
  "version": "1.0.4",
  "description": "A sleek and customizable toast notification component for React",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:umd && npm run build:esm && npm run build:types",
    "build:umd": "webpack --config webpack.config.js",
    "build:esm": "webpack --config webpack.esm.config.js",
    "build:types": "cp src/index.d.ts dist/index.d.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "webpack serve --config webpack.dev.config.js"
  },
  "keywords": [
    "react",
    "toast",
    "notification",
    "component",
    "ui"
  ],
  "author": "Fahyvor",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^4.0.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Fahyvor/sleek-toast.git"
  },
  "bugs": {
    "url": "https://github.com/Fahyvor/sleek-toast/issues"
  },
  "homepage": "https://github.com/Fahyvor/sleek-toast#readme"
}